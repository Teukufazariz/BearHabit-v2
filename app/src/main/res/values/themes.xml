<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="NavigationElementStyle">
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:background">@color/colorNavigationElement</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTitleStyle">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TaskInfoTextStyle">
        <item name="android:textSize">@dimen/extraSmallTextSize</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>